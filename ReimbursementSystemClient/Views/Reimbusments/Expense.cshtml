@{
    Layout = "_EmployeeLayout";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>Focus - Bootstrap Admin Dashboard </title>
    <!-- Favicon icon -->
</head>

<body>
    <div class="container-fluid">
        <!-- Data -->
        <div class="card">
            <div class="card-header">
                <h4 class="card-title expense-title">Expense Request # <span value=""></span></h4>
            </div>
            <div class="card-body">
                <form class="needs-validation" novalidate>

                    <div class="row">
                        <div class="form-group col-xl-6 text-dark">
                            <label for="inputState">Approver</label>
                            <input type="text" class="form-control input-default" placeholder="" id="Approver" value="" disabled>
                        </div>

                        <div class="form-group col-xl-6 text-dark">
                            <label for="inputState">Status</label>
                            <input type="text" class="form-control input-default" placeholder="" id="Status" value="" disabled>
                        <div class="form-group col-xl-6">
                            <label for="inputState">Approver : <span id="Approver"></span> </label>
                        </div>

                        <div class="form-group col-xl-6">
                            <label for="inputState">Status : <span id="Status"></span> </label>
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group col-xl-12 text-dark">
                            <label for="inputState">Purpose</label>
                            <input type="text" class="form-control input-default" placeholder="" id="Purpose" value="">
                        </div>
                    </div>

                    <div class="row">
                        <div class="basic-form form-group col-xl-12 text-dark">
                            <label for="inputState">Description</label>
                            <div class="form-group">
                                <textarea class="form-control" rows="4" id="Description"></textarea>
                            </div>
                        </div>
                    </div>

                    <button class="btn btn-primary" type="button" onclick="return Submit()">Submit Expense</button>
                    <button class="btn btn-primary" type="button" onclick="return SaveExit()">Save & Exit</button>

                </form>

            </div>
        </div>

        <!-- Table -->
        <div class="card">
            <div class="card-body">
                <button class="btn btn-primary mb-3" type="button" onclick="return InsertForm()">Add Expense Form</button>
                <table id="Formtable" class="table table-hover dt-responsive table-striped nowarp" style="width:100%">
                    <thead class="table-info head-table text-center">
                        <tr>
                            <th> Date </th>
                            <th> Category </th>
                            <th> Payee </th>
                            <th> Description </th>
                            <th> Amount </th>
                            <th> Action </th>
                        </tr>
                    </thead>
                    <tbody class="text-dark">
                        <tr>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Total Expense</h4>
            </div>
            <div class="card-body">
                <form>
                    <div class="row">
                        <div class="form-group col-lg-3 col-md-3 col-sm-3">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="inputGroup-sizing-default">Total Expense Rp.</span>
                                </div>
                                <input id="Total" type="number" class="form-control" placeholder="Rp.0" aria-label="Default" aria-describedby="inputGroup-sizing-default" step="0.01" disabled>
                            </div>

                        </div>
                    </div>
                </form>
            </div>

        </div>

        <!-- Modal Detail Employee-->
        <div class="modal fade" id="DetailModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLongTitle">Expense Detail</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <div class="table col data-employ">

                            </div>

                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
    
</html>

@section Scripts
    {

    <script src="~/js/ExpenseJS.js" > </script>
}